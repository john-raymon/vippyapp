{
  "name": "vippybeta",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "start": "node ./bin/www",
    "heroku-postbuild": "cd client && npm install && npm run build-css && npm run build",
    "client": "concurrently --kill-others-on-fail 'cd client && yarn watch'  'cd client && yarn start'",
    "client:build-css": "cd client && yarn build-css",
    "client:watch-css": "cd client && yarn watch-css",
    "dev-server": "nodemon ./bin/www",
    "dev-start": "concurrently --kill-others-on-fail \"yarn dev-server\" \"yarn client\"",
    "test": "mocha"
  },
  "dependencies": {
    "autoprefixer": "^9.7.2",
    "cloudinary": "^1.14.0",
    "concurrently": "^4.1.0",
    "cookie-parser": "~1.4.3",
    "cors": "^2.8.5",
    "crypto": "^1.0.1",
    "date-fns": "^1.30.1",
    "debug": "~2.6.9",
    "dotenv": "^7.0.0",
    "express": "~4.16.0",
    "express-jwt": "^5.3.1",
    "jsonwebtoken": "^8.5.0",
    "libphonenumber-js": "^1.7.14",
    "mocha": "^6.0.2",
    "mongoose": "^5.4.19",
    "mongoose-unique-validator": "^2.0.2",
    "morgan": "~1.9.0",
    "multer": "^1.4.1",
    "multer-storage-cloudinary": "^2.2.1",
    "passport": "^0.4.0",
    "passport-local": "^1.0.0",
    "postcss-cli": "^6.1.3",
    "querystring": "^0.2.0",
    "request": "^2.88.0",
    "slug": "^1.0.0",
    "stripe": "^6.28.0",
    "tailwindcss": "^1.1.3",
    "zipcodes": "^8.0.0"
  },
  "devDependencies": {
    "husky": "^1.3.1",
    "kill-port": "^1.6.0",
    "lint-staged": "^8.1.5",
    "nodemon": "^1.19.2",
    "prettier": "1.16.4"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,json,css,md}": [
      "prettier --write",
      "git add"
    ]
  }
}
