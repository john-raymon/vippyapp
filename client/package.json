{
  "name": "client",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@material-ui/core": "^3.9.3",
    "@material-ui/icons": "^3.0.2",
    "autoprefixer": "^9.7.2",
    "connected-react-router": "^6.4.0",
    "date-fns": "^1.30.1",
    "history": "^4.9.0",
    "localforage": "^1.7.3",
    "lodash": "^4.17.11",
    "moment-timezone": "^0.5.25",
    "postcss-cli": "^6.1.3",
    "postcss-scss": "^2.0.0",
    "query-string": "^6.8.1",
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "react-modal": "^3.8.2",
    "react-redux": "^7.0.3",
    "react-router": "^5.0.0",
    "react-router-dom": "^5.0.0",
    "react-router-redux": "^4.0.8",
    "react-scripts": "2.1.8",
    "react-stripe-elements": "^3.0.0",
    "redux": "^4.0.1",
    "redux-logger": "^3.0.6",
    "redux-persist": "^5.10.0",
    "redux-promise-middleware": "^6.1.0",
    "redux-state-sync": "^2.0.3",
    "redux-thunk": "^2.3.0",
    "reselect": "^4.0.0",
    "superagent": "^5.0.2",
    "superagent-promise": "^1.1.0",
    "tailwindcss": "^1.1.3",
    "yup": "^0.27.0",
    "node-sass-chokidar": "^1.3.4"
  },
  "scripts": {
    "tailwind": "tailwind build ./src/styles/tailwindcss.css -c ./tailwind.config.js -o ./src/styles/tailwindcss-out.css",
    "build-css": "yarn tailwind && node-sass-chokidar --include-path ./node_modules/ ./src -o ./src",
    "watch-css": "yarn build-css && tailwind build ./src/styles/tailwindcss.css -c ./tailwind.config.js -o ./src/styles/tailwindcss-out.css --recurisve && tailnode-sass-chokidar --include-path ./node_modules/ ./src -o ./src --watch --recursive",
    "start": "PORT=4000 react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "watch": "npm-watch"
  },
  "watch": {
    "build-css": {
      "patterns": [
        "src"
      ],
      "extensions": "scss",
      "runOnChangeOnly": false
    }
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ],
  "proxy": "http://localhost:3000/",
  "devDependencies": {
    "npm-watch": "^0.6.0"
  }
}
